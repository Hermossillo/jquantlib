  <build>
    <extensions>
      <extension>
      <groupId>org.apache.maven.wagon</groupId>
      <artifactId>wagon-webdav</artifactId>
      <version>1.0-beta-2</version>
      </extension>
    </extensions>
    
    <plugins>
    
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>maven-buildnumber-plugin</artifactId>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <doCheck>${maven.buildNumber.doCheck}</doCheck>
        </configuration>
      </plugin>
      
      <plugin>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.0-beta-3</version>
        <configuration>
          <goals>install</goals>
          <startDate>YYYY-MM-DD</startDate>
          <endDate>YYYY-MM-DD</endDate>
        </configuration>
      </plugin>
      
    <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>show info</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>java.version=${java.version}</echo>
                <echo>java.vm.version=${java.vm.version}</echo>
                <echo>java.home=${java.home}</echo>
                <echo>java.endorsed.dirs=${java.endorsed.dirs}</echo>
                <echo>java.ext.dirs=${java.ext.dirs}</echo>
                <echo>java.library.path=${java.library.path}</echo>
                <echo>java.runtime.version=${java.runtime.version}</echo>
                <echo>java.specification.version=${java.specification.version}</echo>
              </tasks>
            </configuration>
          </execution>
        </executions>
    </plugin>
    
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${maven.compile.jdk}</source>
          <target>${maven.compile.jdk}</target>
          <encoding>${maven.compile.encoding}</encoding>
          <meminitial>${maven.compile.meminitial}</meminitial>
          <maxmem>${maven.compile.maxmem}</maxmem>
          <fork>${maven.compile.fork}</fork>
        </configuration>
      </plugin>
      
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <index>${maven.jar.index}</index>
            <manifest>
              <mainClass>${maven.jar.manifest.mainClass}</mainClass>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addExtensions>true</addExtensions>
            </manifest>
            <manifestEntries>
            
              <Specification-Title>QuantLib</Specification-Title>           <!-- hardcoded :: never changes -->
              <Specification-Vendor>QuantLib</Specification-Vendor>         <!-- hardcoded :: never changes -->
              <Specification-Version>0.8.1</Specification-Version>          <!-- hardcoded :: *** changes rarely *** -->
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Vendor>JQuantLib</Implementation-Vendor>      <!-- hardcoded :: never changes -->
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              
              <App-Realm>${profile.manifest.app.realm}</App-Realm> <!-- reserved for the future -->
              <App-Mode>${profile.manifest.app.mode}</App-Mode>    <!-- reserved for the future --> 
              <App-URL>${project.url}</App-URL>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <testFailureIgnore>false</testFailureIgnore>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <excludes>
            <exclude>**/**$*</exclude>
          </excludes>
        </configuration>
      </plugin>
      
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptorSourceDirectory>src/main/assembly</descriptorSourceDirectory>
          <archive>
            <index>${maven.jar.index}</index>
            <manifest>
              <mainClass>${maven.jar.manifest.mainClass}</mainClass>
            </manifest>
            <manifestEntries>
            
              <Specification-Title>QuantLib</Specification-Title>           <!-- hardcoded :: never changes -->
              <Specification-Vendor>QuantLib</Specification-Vendor>         <!-- hardcoded :: never changes -->
              <Specification-Version>0.8.1</Specification-Version>          <!-- hardcoded :: *** changes rarely *** -->
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Vendor>JQuantLib</Implementation-Vendor>      <!-- hardcoded :: never changes -->
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              
              <App-Realm>${profile.manifest.app.realm}</App-Realm> <!-- reserved for the future -->
              <App-Mode>${profile.manifest.app.mode}</App-Mode>    <!-- reserved for the future -->
              <App-URL>${project.url}</App-URL>
            </manifestEntries>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>ubber</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <configuration>
          <tasks>
            <echo>project.build.directory=${project.build.directory}</echo>
            <echo>project.groupId=${project.groupId}</echo>
            <echo>project.artifactId=${project.artifactId}</echo>
            <echo>project.version=${project.version}-${buildNumber}</echo>
            <echo>project.url=${project.url}</echo>
            <echo>maven.compile.jdk=${maven.compile.jdk}</echo>
            <echo>maven.jar.manifest.mainClass=${maven.jar.manifest.mainClass}</echo>
            <echo>profile.manifest.app.realm=${profile.manifest.app.realm}</echo> <!-- reserved for the future -->
            <echo>profile.manifest.app.mode=${profile.manifest.app.mode}</echo>   <!-- reserved for the future -->
            <echo>project.url=${project.url}</echo>
          </tasks>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>1.1.1</version>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.2</version>
      </plugin>
      
      <!-- 
      <plugin>
