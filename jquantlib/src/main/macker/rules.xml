<?xml version="1.0"?>
<!DOCTYPE macker PUBLIC
           "-//innig//DTD Macker 0.4//EN"
           "http://innig.net/macker/dtd/macker-0.4.dtd">

<macker>
    <ruleset name="Use fastutil classes instead">
    
        <pattern name="concrete-class">
            <exclude filter="interface" />
            <exclude filter="abstract-class" />
        </pattern>
    
        <pattern name="jcf-concrete-class" filter="subtype-of" class="java.util.Collection">
            <include pattern="concrete-class" />
        </pattern>
            
        <access-rule>
            <message>The UI layer may not directly access the DB layer</message>
            <deny>
                <to pattern="jcf-concrete-class" />
            </deny>
        </access-rule>
        
    </ruleset>
</macker>
