    <!-- These settings are only needed by Continuum and release managers      -->
    <!-- Defaults used here are intended to avoid problems with maven2.0.9 but -->
    <!-- are not values Continuum and release managers need.                   -->
    <!--  role>default</role>
    <protocol>ssh</protocol -->
    <maven.required.version>2.0.9</maven.required.version>
    <extension.wagon-ssh.version>1.0-beta-1</extension.wagon-ssh.version>
    <extension.wagon-ftp.version>1.0-beta-1</extension.wagon-ftp.version>
