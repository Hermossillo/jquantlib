                        <tag>PERFORMANCE</tag>
                        <tag>@Override</tag>
                        <tag>@Deprecated</tag>
                        <tag>@SupressWarnings</tag>
                        <tag>@Ignore</tag>
                        <tag>@Unused</tag>
                        <tag>@note</tag>
                    </tags>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <!-- version>2.4</version -->
                <configuration>
                    <linkXref>true</linkXref>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <minimumTokens>100</minimumTokens>
                    <targetJdk>${maven.compile.jdk.target}</targetJdk>
                    <excludes>
                        <exclude>**/*Bean.java</exclude>
                        <exclude>**/generated/*.java</exclude>
                    </excludes>
                    <rulesets>
                        <ruleset>/rulesets/basic.xml</ruleset>
                        <ruleset>/rulesets/braces.xml</ruleset>
                        <ruleset>/rulesets/naming.xml</ruleset>
                        <ruleset>/rulesets/finalizers.xml</ruleset>
                        <ruleset>/rulesets/logging-java.xml</ruleset>
                        <ruleset>/rulesets/migrating.xml</ruleset>
                        <ruleset>/rulesets/controversial.xml</ruleset>
                        <!--  TODO: only project 'jquantlib' needs it -->
                        <!-- ruleset>${basedir}/src/main/pmd/architectural.xml</ruleset--> 
                    </rulesets>
                </configuration>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>pmd</report>
                            <report>cpd</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jdepend-maven-plugin</artifactId>
                <!-- version>2.0-beta-1</version -->
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <!-- version>1.2</version -->
                <configuration>
                    <report>maven-findbugs-plugin</report>
                </configuration>
            </plugin>

        </plugins>
    </reporting>

    <distributionManagement>
        <repository>
            <id>artifactory-releases</id>
            <name>artifactory-releases</name>
            <url>${maven.deploy.repository.url}/inhouse-releases</url>
        </repository>
        <snapshotRepository>
            <id>artifactory-snapshots</id>
            <name>artifactory-snapshots</name>
            <url>${maven.deploy.repository.url}/inhouse-snapshots</url>
        </snapshotRepository>
        <site>
            <id>site</id>
            <name>${project.name} site by Maven</name>
            <url>${maven.deploy.site.url}/${project.artifactId}</url>
        </site>
    </distributionManagement>

    <profiles>
        <!--
        **     * quick (default)
        **         Intended to run everytime a new commit happens and/or relatively short periods of time.
        **         - no javadoc generation
        **         - no unit tests
        **         - no integration tests: no surefire reports; no cobertura reports
        **         - no site generation/deployment
        **         $ mvn clean package
        -->
        <profile>
            <id>quick</id>
            <activation>
                <property>
                    <name>mode</name>
                    <value>quick</value>
                </property>
            </activation>
        </profile>

        <!-- 
        **     * nightly
        **         Intended to run once a day, producing documentation but skipping test coverage reports.
        **         - generates javadocs
        **         - no integration tests: no surefire reports; no cobertura reports
        **         - generates and deploys site
        **         $ mvn clean site-deploy
        -->
        <profile>
            <id>nightly</id>
            <activation>
                <property>
                    <name>mode</name>
                    <value>nightly</value>
                </property>
            </activation>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
        
        <!--
        **     * weekly
        **         Intended to generate full documentation.
        **         - generates javadocs
        **         - runs integration tests: surefire reports and cobertura reports are generated
        **         - generates and deploys site
        **         $ mvn clean site-deploy
        -->
        <profile>
            <id>weekly</id>
            <activation>
                <property>
                    <name>mode</name>
                    <value>weekly</value>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>cobertura-maven-plugin</artifactId>
                            <!-- version>2.2</version --> <!-- TODO: version -->
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <!-- version>2.4.3</version -->
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <!-- version>2.2</version -->
                    </plugin>
                </plugins>
            </reporting>
        </profile>

        <!--
        **     * release-profile (based on Super POM at http://maven.apache.org/pom.html#The_Super_POM )
        **         Intended to generate full documentation and tag a new release.
        **         - activated via command line option
        **         - generates javadocs
        **         - runs integration tests: surefire reports and cobertura reports are generated
        **         - deploys artifacts
        **         - deploys site and documentation
        **         $ mvn clean deploy site-deploy -DperformRelease=true
        -->
        <profile>
            <id>release-profile</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>cobertura-maven-plugin</artifactId>
                            <!-- version>2.2</version --> <!-- TODO: version -->
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                    
                    <plugin>
                        <inherited>true</inherited>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <inherited>true</inherited>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <inherited>true</inherited>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <configuration>
                            <updateReleaseInfo>true</updateReleaseInfo>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <!-- version>2.4.3</version -->
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <!-- version>2.2</version -->
                    </plugin>
                </plugins>
            </reporting>
        </profile>
    </profiles>

    <properties>
        <!-- SCM parameters -->
        <maven.scm.project>jquant</maven.scm.project>
        <maven.scm.branch>trunk</maven.scm.branch>
        <maven.scm.root>jquant.svn.sourceforge.net/svnroot</maven.scm.root>
        <maven.scm.connection>scm:svn:http://${maven.scm.root}/${maven.scm.project}/${maven.scm.branch}/${project.artifactId}</maven.scm.connection>
        <maven.scm.developerConnection>scm:svn:https://${maven.scm.root}/${maven.scm.project}/${maven.scm.branch}/${project.artifactId}</maven.scm.developerConnection>
        <maven.scm.url>http://${maven.scm.root}/${maven.scm.project}/${maven.scm.branch}/${project.artifactId}</maven.scm.url>
        <maven.buildNumber.doCheck>false</maven.buildNumber.doCheck>

        <!-- compile defaults -->
        <maven.compile.jdk.source>1.6</maven.compile.jdk.source>
        <maven.compile.jdk.target>1.6</maven.compile.jdk.target>
        <maven.compile.encoding>UTF8</maven.compile.encoding>
        <maven.compile.meminitial>128m</maven.compile.meminitial>
        <maven.compile.maxmem>512m</maven.compile.maxmem>
        <maven.compile.fork>false</maven.compile.fork> <!-- Be cautious: may fork a different JVM -->
        
        <!--  package default -->
        <maven.jar.index>true</maven.jar.index>

        <!--  deployment management -->
        <maven.deploy.repository.url>http://artifactory.jquantlib.org:8080/artifactory</maven.deploy.repository.url>
        <maven.deploy.site.url>scp://hudson@apache/srv/jquantlib.org/sites</maven.deploy.site.url>
    </properties>

</project>
